{
  "compilerOptions": {
    "module": "ESNext",
    "esModuleInterop": true,
    "target": "esnext",
    "moduleResolution": "node",
    "sourceMap": false, // Disable source maps for production
    "outDir": "./dist",
    "rootDir": "./src",
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "removeComments": true // Remove comments from the output
  },
  "include": [
    "src/**/*"
  ],
  "lib": [
    "es2017",
    "dom"
  ]
}